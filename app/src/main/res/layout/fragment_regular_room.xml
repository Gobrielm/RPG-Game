<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enemy_ui1_container"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/enemy_ui2_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/enemy_ui1"
            layout="@layout/dungeon_character_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/target1Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enemy_ui2_container"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/enemy_ui3_container"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/enemy_ui1_container"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/enemy_ui2"
            layout="@layout/dungeon_character_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/target2Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enemy_ui3_container"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginStart="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/enemy_ui2_container"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/enemy_ui3"
            layout="@layout/dungeon_character_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/target3Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/attackAnimation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="156dp"

        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:lottie_fileName="Battle.json" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/healAnimation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="156dp"

        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:lottie_fileName="Heal.json" />


    <TextView
        android:id="@+id/hitDescriptionText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="@color/text_color"

        android:layout_marginStart="10dp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/attackAnimation"
        app:layout_constraintStart_toEndOf="@+id/attackAnimation"
        app:layout_constraintTop_toTopOf="@+id/attackAnimation" />

    <TextView
        android:id="@+id/damageAmountText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="@color/text_color"

        android:layout_marginStart="10dp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/attackAnimation"
        app:layout_constraintEnd_toStartOf="@+id/attackAnimation"
        app:layout_constraintTop_toTopOf="@+id/attackAnimation" />

    <TextView
        android:id="@+id/centeredText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>