<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goblin" />

    <ProgressBar
        android:id="@+id/health_progressbar"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="15dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:progress="50"
        android:progressTint="#F80000"
        app:layout_constraintEnd_toStartOf="@+id/stamina_progressbar"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/mana_progressbar"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="15dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:progress="70"
        android:progressTint="#251BAF"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/stamina_progressbar"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="15dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:progress="85"
        android:progressTint="#0BF613"
        app:layout_constraintEnd_toStartOf="@+id/mana_progressbar"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/attackAnimation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:lottie_fileName="Battle.json"

        android:layout_marginStart="155dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="316dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_progressbar" />

    <TextView
        android:id="@+id/hitTypeText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="181dp"

        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"

        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attackAnimation" />

</androidx.constraintlayout.widget.ConstraintLayout>