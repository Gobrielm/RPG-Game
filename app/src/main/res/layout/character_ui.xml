<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dungeonExploration.DungeonExplorationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mini_character1_container"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="254dp"
        android:visibility="gone">

        <include
            android:id="@+id/mini_character_ui1"
            layout="@layout/mini_character_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mini_character2_container"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="374dp"
        android:visibility="gone">

        <include
            android:id="@+id/mini_character_ui2"
            layout="@layout/mini_character_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainCharacterUI"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_gravity="bottom"
        android:background="#804E4E4E">

        <ProgressBar
            android:id="@+id/main_mana_progressbar"
            style="@style/Widget.ProgressBar.Vertical"
            android:layout_width="14dp"
            android:layout_height="141dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="75dp"
            android:progress="70"
            android:progressTint="#251BAF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/main_health_progressbar" />

        <ProgressBar
            android:id="@+id/main_stamina_progressbar"
            style="@style/Widget.ProgressBar.Vertical"
            android:layout_width="14dp"
            android:layout_height="141dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="75dp"
            android:progress="85"
            android:progressTint="#0BF613"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/main_mana_progressbar" />

        <ProgressBar
            android:id="@+id/main_health_progressbar"
            style="@style/Widget.ProgressBar.Vertical"
            android:layout_width="16dp"
            android:layout_height="141dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="75dp"
            android:progress="50"
            android:progressTint="#F80000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/mv1Button"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="35dp"
            android:autoSizeMaxTextSize="18sp"

            android:autoSizeMinTextSize="8sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:text="Button"

            app:layout_constraintBottom_toTopOf="@+id/mv2Button"
            app:layout_constraintEnd_toStartOf="@+id/mv3Button" />

        <Button
            android:id="@+id/mv2Button"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="80dp"

            android:autoSizeMaxTextSize="18sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"

            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mv4Button" />

        <Button
            android:id="@+id/mv3Button"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="35dp"
            android:autoSizeMaxTextSize="18sp"

            android:autoSizeMinTextSize="8sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:text="Button"

            app:layout_constraintBottom_toTopOf="@+id/mv4Button"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/mv4Button"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="80dp"
            android:autoSizeMaxTextSize="18sp"

            android:autoSizeMinTextSize="8sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:text="Button"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <Button
            android:id="@+id/skipButton"
            android:layout_width="120dp"
            android:layout_height="40dp"

            android:layout_marginEnd="45dp"
            android:layout_marginBottom="20dp"
            android:text="Skip Turn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/mainStatusEffect1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/truck"
            android:scaleType="centerCrop"

            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/mainStatusEffect2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/truck"
            android:scaleType="centerCrop"

            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mainStatusEffect1" />

        <ImageView
            android:id="@+id/mainStatusEffect3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/truck"
            android:scaleType="centerCrop"

            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mainStatusEffect2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_character_ui"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/dungeon_navigation" />

    <View
        android:id="@+id/blurRect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#80FFFFFF"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/failText"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Fail"
        android:textColor="#FF0000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/finishText"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Succeed"
        android:textColor="#00FF00"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>