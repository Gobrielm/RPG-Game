<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mainApp.rpg.gui.ZoomPanLayout
        android:id="@+id/zoomContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.mainApp.rpg.gui.ZoomPanLayout>

    <TextView
        android:id="@+id/skillPointsCount"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Pts Avail: "
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/skillMenu"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="#5D5D5D"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/zoomContainer"
        app:layout_constraintEnd_toEndOf="@+id/zoomContainer"
        app:layout_constraintStart_toStartOf="@+id/zoomContainer"
        app:layout_constraintTop_toBottomOf="@+id/zoomContainer">

        <TextView
            android:id="@+id/skillText"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/closeMenuButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/unlockSkillButton"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Unlock Skill"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="24sp"
            android:autoSizeStepGranularity="1sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Go Back Button"
        android:src="@android:drawable/btn_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>