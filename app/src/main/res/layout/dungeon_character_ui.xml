<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="181dp"
        android:layout_height="30dp"
        android:text="Name"

        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeStepGranularity="1sp"

        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/main_health_progressbar"
        android:layout_width="141dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:progress="50"
        android:progressTint="#F80000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <ProgressBar
        android:id="@+id/main_mana_progressbar"
        android:layout_width="141dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:progress="70"
        android:progressTint="#251BAF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_health_progressbar" />

    <ProgressBar
        android:id="@+id/main_stamina_progressbar"
        android:layout_width="141dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:progress="85"
        android:progressTint="#0BF613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_mana_progressbar" />

    <ImageView
        android:id="@+id/mainStatusEffect1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"

        android:scaleType="centerCrop"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_stamina_progressbar"
        app:srcCompat="@drawable/truck" />

    <ImageView
        android:id="@+id/mainStatusEffect2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"

        android:scaleType="centerCrop"

        app:layout_constraintStart_toEndOf="@+id/mainStatusEffect1"
        app:layout_constraintTop_toBottomOf="@+id/main_stamina_progressbar"
        app:srcCompat="@drawable/truck" />

    <ImageView
        android:id="@+id/mainStatusEffect3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"

        android:scaleType="centerCrop"

        app:layout_constraintStart_toEndOf="@+id/mainStatusEffect2"
        app:layout_constraintTop_toBottomOf="@+id/main_stamina_progressbar"
        app:srcCompat="@drawable/truck" />

</androidx.constraintlayout.widget.ConstraintLayout>