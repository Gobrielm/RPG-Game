<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginEnd="40dp"
        android:text="Name"

        android:textAlignment="center"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/health_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:max="100"
        android:progress="50"
        android:progressTint="#F80000"
        app:layout_constraintEnd_toStartOf="@+id/status_effect2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <ProgressBar
        android:id="@+id/mana_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:max="100"
        android:progress="70"
        android:progressTint="#251BAF"
        app:layout_constraintEnd_toStartOf="@+id/status_effect2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_progressbar" />

    <ProgressBar
        android:id="@+id/stamina_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:max="100"
        android:progress="85"
        android:progressTint="#0BF613"
        app:layout_constraintEnd_toStartOf="@+id/status_effect2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mana_progressbar" />

    <ImageView
        android:id="@+id/status_effect1"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:scaleType="centerCrop"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/truck" />

    <ImageView
        android:id="@+id/status_effect2"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:scaleType="centerCrop"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_effect1"
        app:srcCompat="@drawable/truck" />

    <ImageView
        android:id="@+id/status_effect3"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:scaleType="centerCrop"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_effect2"
        app:srcCompat="@drawable/truck" />

    <FrameLayout
        android:id="@+id/damageIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5FFF0000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>